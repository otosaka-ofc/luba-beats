generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    email     String   @unique
    name      String?
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    beats     Beat[]

    Purchase Purchase[]
}

model Beat {
    id          Int      @id @default(autoincrement())
    title       String
    description String?
    price       Float
    audioUrl    String
    coverUrl    String?
    userId      Int
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    user     User       @relation(fields: [userId], references: [id])
    Purchase Purchase[]

    @@index([userId])
}

model Purchase {
    id        Int      @id @default(autoincrement())
    userId    Int
    beatId    Int
    createdAt DateTime @default(now())

    user User @relation(fields: [userId], references: [id])
    beat Beat @relation(fields: [beatId], references: [id])

    @@index([userId])
    @@index([beatId])
}
